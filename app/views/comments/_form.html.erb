<!-- Formulario de comentarios  el cual tiene la propiedad de remote => true esto quiere decir que las llamadas seran remotas
     esto con el fin de realizar una llamada JS-->
<%= form_for @comment, :remote => true, :html => {:multipart => true, :class => 'form-inline' } do |f| %>
    <!-- Se pasa el id = 'form' el cual sera utilizado para limpiar el formulario con jquery vease create.js.erb -->
    <%= f.text_field :text, :id => 'form',  :class => 'input-medium', :placeholder => "Escribe..." %>

    <%= f.hidden_field :image_id, :id => "imagen"%>

    <%= f.submit '+', :remote => true, :class => 'btn-mini btn-info'%>
<% end %>
