<!-- Formulario de imagen  el cual tiene la propiedad de remote => true esto quiere decir que las llamadas seran remotas
     esto con el fin de realizar una llamada JS-->
<%= form_for @image, :remote => true, :html => {:multipart => true, :class => 'form-inline' } do |f| %>

    <%= f.text_field :name, :class => 'input-medium', :placeholder => "Nombre Imagen" %>

    <%= f.file_field :picture %>

    <%= f.submit 'Crear Imagen', :remote => true, :class => 'btn-medium btn-success' %>
<% end %>
